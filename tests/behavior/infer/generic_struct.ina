extern mod core;

type pair[T, V] = {
    a: T,
    b: V,
}

fn pair[T, V](i: T, j: V) -> pair[T, V] {
    pair { a: i, b: j }
}

fn first[T, V](t: pair[T, V]) -> T {
    t.a
}

fn second[T, V](t: pair[T, V]) -> V {
    t.b
}

[test]
fn test_pair() {
    let pair = pair("Hello World", 69);
    let fst = first(pair);
    let buf = fst.as_bytes();
    assert buf.len() == 11;
    assert buf[0] == 72;
    let chk: i64 = 69;
    assert second(pair) == chk;
}
