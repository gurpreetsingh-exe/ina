#[test]
fn one_shot_break() {
    let x = loop { break 20 };
    assert x == 20;
}

#[test]
fn test_break() {
    let mut i = 0;
    loop {
        if i == 10 { break; }
        i = i + 1;
    }
    assert i == 10;

    loop {
        let x = loop { break 20 };
        if i == x { break; }
        i = i + 1;
    }
    assert i == 20;
}
