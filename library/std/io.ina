extern mod core;

using os::fd::FileDesc;

fn stdin() -> FileDesc {
    FileDesc::from_fd(0)
}

fn stdout() -> FileDesc {
    FileDesc::from_fd(1)
}

fn stderr() -> FileDesc {
    FileDesc::from_fd(2)
}

fn print(string: str) {
    let stdout = stdout();
    stdout.write(string.as_ptr(), string.len());
}

fn println(str: str) {
    print(str);
    print("\n");
}
